{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://tiki.dev/schemas/knowledge-index.schema.json",
  "title": "Tiki Knowledge Index",
  "description": "Schema for .tiki/knowledge/index.json knowledge index",
  "type": "object",
  "required": ["lastUpdated", "nextId", "entries"],
  "properties": {
    "lastUpdated": {
      "type": "string",
      "format": "date-time",
      "description": "Timestamp of last index update"
    },
    "nextId": {
      "type": "integer",
      "minimum": 1,
      "description": "Next available ID number for new entries"
    },
    "entries": {
      "type": "object",
      "description": "Map of entry IDs to metadata",
      "additionalProperties": {
        "type": "object",
        "required": ["title", "created", "source", "keywords", "confidence"],
        "properties": {
          "title": {
            "type": "string",
            "minLength": 1,
            "description": "Entry title"
          },
          "created": {
            "type": "string",
            "format": "date-time",
            "description": "Creation timestamp"
          },
          "source": {
            "type": "string",
            "enum": ["issue", "manual", "debug-session", "execution"],
            "description": "How this knowledge was captured"
          },
          "keywords": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Keywords for matching"
          },
          "files": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Related file paths"
          },
          "confidence": {
            "type": "string",
            "enum": ["high", "medium", "low"],
            "description": "Confidence level"
          },
          "autoGenerated": {
            "type": "boolean",
            "description": "Whether auto-generated"
          },
          "archived": {
            "type": "boolean",
            "description": "Whether archived"
          }
        }
      }
    }
  },
  "additionalProperties": false
}
