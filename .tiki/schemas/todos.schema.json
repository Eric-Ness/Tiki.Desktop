{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://tiki.dev/schemas/todos.schema.json",
  "title": "Tiki Todos",
  "description": "Schema for .tiki/todos.json backlog items",
  "type": "object",
  "properties": {
    "items": {
      "type": "array",
      "description": "Todo backlog items",
      "items": {
        "type": "object",
        "required": ["id", "description", "status"],
        "properties": {
          "id": {
            "type": "string",
            "description": "Unique identifier for the todo item"
          },
          "description": {
            "type": "string",
            "description": "Todo item description"
          },
          "status": {
            "type": "string",
            "enum": ["pending", "in_progress", "completed", "cancelled"],
            "description": "Todo item status"
          },
          "createdAt": {
            "type": "string",
            "format": "date-time",
            "description": "When the todo was created"
          },
          "completedAt": {
            "oneOf": [
              { "type": "string", "format": "date-time" },
              { "type": "null" }
            ],
            "description": "When the todo was completed"
          },
          "priority": {
            "type": "string",
            "enum": ["high", "medium", "low"],
            "description": "Priority level"
          },
          "tags": {
            "type": "array",
            "items": { "type": "string" },
            "description": "Tags for categorization"
          },
          "relatedIssue": {
            "oneOf": [
              { "type": "integer", "minimum": 1 },
              { "type": "null" }
            ],
            "description": "Related GitHub issue number"
          },
          "notes": {
            "type": "string",
            "description": "Additional notes"
          }
        }
      }
    },
    "lastUpdated": {
      "type": "string",
      "format": "date-time",
      "description": "When the todos list was last modified"
    }
  },
  "additionalProperties": true
}
