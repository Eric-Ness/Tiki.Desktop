{
  "name": "tiki-desktop",
  "version": "1.0.2",
  "description": "Desktop application for the Tiki workflow framework",
  "main": "dist-electron/main/index.js",
  "scripts": {
    "dev": "electron-vite dev",
    "build": "electron-vite build",
    "preview": "electron-vite preview",
    "postinstall": "electron-builder install-app-deps",
    "build:win": "npm run build && electron-builder --win",
    "build:mac": "npm run build && electron-builder --mac",
    "build:linux": "npm run build && electron-builder --linux",
    "lint": "eslint .",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "test:run": "vitest run"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.71.2",
    "@electron-toolkit/utils": "^3.0.0",
    "@tanstack/react-query": "^5.0.0",
    "@types/prismjs": "^1.26.5",
    "@xterm/addon-fit": "^0.11.0",
    "@xterm/addon-web-links": "^0.12.0",
    "@xterm/xterm": "^6.0.0",
    "@xyflow/react": "^12.0.0",
    "chokidar": "^3.6.0",
    "cmdk": "^1.0.0",
    "dagre": "^0.8.5",
    "electron-store": "^8.1.0",
    "electron-updater": "^6.7.3",
    "lucide-react": "^0.300.0",
    "node-pty": "^1.0.0",
    "prismjs": "^1.30.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-markdown": "^10.1.0",
    "react-resizable-panels": "^2.0.0",
    "uuid": "^13.0.0",
    "zustand": "^4.5.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/dagre": "^0.7.52",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/uuid": "^10.0.0",
    "@vitejs/plugin-react": "^4.2.0",
    "autoprefixer": "^10.4.16",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.0",
    "electron-vite": "^2.0.0",
    "eslint": "^9.39.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.26",
    "globals": "^17.2.0",
    "jsdom": "^27.4.0",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.3.0",
    "typescript-eslint": "^8.54.0",
    "vite": "^5.0.0",
    "vitest": "^4.0.18"
  },
  "build": {
    "appId": "com.tiki.desktop",
    "productName": "Tiki Desktop",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist-electron",
      "dist",
      "resources"
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "resources/icon.ico",
      "artifactName": "Tiki.Desktop.Setup.${version}.${ext}"
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "icon": "resources/icon.icns",
      "artifactName": "Tiki.Desktop-${version}-${arch}.${ext}"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "icon": "resources/icon.png",
      "artifactName": "Tiki.Desktop-${version}.${ext}"
    },
    "publish": {
      "provider": "github",
      "owner": "Eric-Ness",
      "repo": "Tiki.Desktop"
    }
  }
}
